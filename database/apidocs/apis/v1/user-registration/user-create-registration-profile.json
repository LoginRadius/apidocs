{
    "name": "User Create Registration Profile",
    "domain": "https://api.loginradius.com",
    "path": "/raas/v1/account/profile",
    "method": "POST",
    "getparams": {
        "appkey*": "@apikey@",
        "appsecret*": "@secret@"
    },
    "postparams": {
        "accountid": "xxxxxxxxxxxxxxxxxxxxxxx",
        "password": "xxxxxxxxx",
        "emailid": "xxxxxxxxx@xxxxx.xxxx"
    },
    "headers": {
        "content-Type": "application/json"
    },
    "response": "json",
    "description": "This api is used to create a traditional account for a user currently logged in via a social provider.",
    "parameters": {
        "Get Params": [
            {
                "name": "api_key",
                "is_required": true,
                "description": "LoginRadius API Key"
            },
            {
                "name": "api_secret",
                "is_required": true,
                "description": "LoginRadius API Secret"
            }
        ],
        "Post Params": [
            {
                "name": "accountid",
                "is_required": true,
                "description": "Account ID of the user"
            },
            {
                "name": "Password",
                "is_required": true,
                "description": "Password of the user"
            },
            {
                "name": "emailid",
                "is_required": true,
                "description": "Email of the user"
            }
        ]
    },
            "outputFormat": {
    "isPosted": true
}
            }