{
    "name": "User Email Availability Server",
    "description": "This server api checks the existence of the specified email address in your Cloud Directory.",
    "domain": "https://api.loginradius.com",
    "path": "/raas/v1/user/checkemail",
    "method": "GET",
    "getparams": {
        "appkey*": "@apikey@",
        "appsecret*": "@secret@",
        "emailid*": ""
    },
    "postparams": "",
    "headers": {
        "content-Type": "application/x-www-form-urlencoded"
    },
    "response": "json",
    "parameters": {
        "Get Params": [
            {
                "name": "api_key",
                "is_required": true,
                "description": "LoginRadius API Key"
            },
            {
                "name": "appsecret",
                "is_required": true,
                "description": "LoginRadius API Secret"
            },
            {
                "name": "email",
                "is_required": true,
                "description": "Email of the user"
            }
        ]
    },
    "outputFormat": {
        "isExist": true
    }
}