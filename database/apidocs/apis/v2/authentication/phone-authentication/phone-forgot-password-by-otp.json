{
    "name": "Phone Forgot Password by OTP",
    "domain": "https://api.loginradius.com",
    "path": "/identity/v2/auth/password/otp",
    "method": "POST",
    "getparams": {
        "apikey*": "@apikey@",
        "smstemplate": ""
    },
    "postparams": {
        "phone": ""
    },
    "headers": {
        "content-Type": "application/json"
    },
    "response": "json",
    "description": "This API is used to send the OTP to reset the account password.",
    "parameters": {
        "Get Params": [
            {
                "name": "apikey",
                "is_required": true,
                "description": "Login Radius API Key"
            },
            {
                "name": "smstemplate",
                "is_required": false,
                "description": "SMS Template Name"
            }
        ],
        "Post Params": [
            {
                "name": "phone",
                "is_required": true,
                "description": "The Registered Phone Number"
            }
        ]
    },
    "outputFormat":{
  "IsPosted": true,
  "Data": {
    "AccountSid": "ACXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX",
    "Sid": "SMXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX"
  }
}
}
