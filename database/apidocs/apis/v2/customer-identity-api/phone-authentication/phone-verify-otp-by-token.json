        "Get Params": [
          {
            "name": "apikey",
            "is_required": true,
            "description": "Login Radius API Key"
          },
          {
            "name": "otp",
            "is_required": true,
            "description": "The Verification Code"
          },
          {
            "name": "smstemplate",
            "is_required": false,
            "description": "SMS Template Name"
          }
        ],
		"Headers Parameters": [{
                "name": "Authorization",
                "is_required": true,
                "description": "Bearer &lt;ACCESS_TOKEN&gt; (User's access token)"
            }]
    }, "outputFormat": {
