{
    "name": "Phone Verification OTP by Token",
    "domain":"https://api.loginradius.com",
    "path": "/identity/v2/auth/phone/otp",
    "method": "PUT",
    "getparams": {
        "apikey*": "@apikey@",
        "otp*": "",
        "smstemplate": ""
    },
    "postparams": {},
    "headers": {
        "content-Type": "application/json",
		"Authorization":"Bearer "
    },
    "response": "json",
